@model PROJECT.Core.Models.ViewModels.GalleryViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>GalleryViewModel</h4>
        @Html.HiddenFor(model => model.FileName)
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group required">
            @Html.LabelFor(model => model.UpFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <span class="btn btn-primary btn-file">
                    Browse…@Html.TextBoxFor(m => m.UpFile, new { type = "file" })
                </span>


                @Html.ValidationMessageFor(model => model.UpFile)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
